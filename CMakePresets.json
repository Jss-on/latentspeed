{
  "version": 3,
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "VCPKG_INSTALLED_DIR": "${sourceDir}/build/debug/vcpkg_installed",
        "CMAKE_CXX_FLAGS": "-Wno-deprecated-declarations -Wno-unused-parameter -Wno-sign-compare"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "VCPKG_INSTALLED_DIR": "${sourceDir}/build/release/vcpkg_installed",
        "CMAKE_CXX_FLAGS": "-Wno-deprecated-declarations -Wno-unused-parameter -Wno-sign-compare"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "displayName": "Build Debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "displayName": "Build Release",
      "configurePreset": "linux-release"
    }
  ],
  "testPresets": []
}
